<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.activity.main.ConnectionLockActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <Switch
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Wi-Fi"
            android:id="@+id/swtWifi"
            android:checked="true" />

        <Switch
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:id="@+id/swtBluetooth"
            android:checked="true" />

        <Switch
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="3g/4g"
            android:id="@+id/swtMobileNet"
            android:checked="true" />

        <Switch
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Re-dirigir llamadas"
            android:id="@+id/swtCalls"
            android:checked="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtRedirPhone"
            android:hint="TelÃ©fono a redirigir llamadas" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/act_conn_lock_lblinfo"
            android:id="@+id/lblInfo" />
    </LinearLayout>
</RelativeLayout>
