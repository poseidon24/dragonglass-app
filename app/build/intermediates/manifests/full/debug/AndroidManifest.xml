<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nexti.android.dragonglass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-feature
        android:name="android.software.device_admin"
        android:required="true" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- Generic Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permissions for Network (WiFi and Bluetooth) changes -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- Permissions for Mobile Network and Calls changes -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- Permission to listen phone restart action -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.nexti.android.dragonglass.view.activity.main.LockMeNowActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.nexti.android.dragonglass.listener.AdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN" >
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.nexti.android.dragonglass.service.LockMeNowService"
            android:enabled="true"
            android:exported="true" />
        <service android:name="com.nexti.android.dragonglass.network.BaseRetrofitSpiceService" />
        <service
            android:name="com.nexti.android.dragonglass.service.UpdateServerDataService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.nexti.android.dragonglass.view.activity.unlock.UnlockActivity"
            android:parentActivityName="com.nexti.android.dragonglass.view.activity.main.LockMeNowActivity" />
        <activity android:name="com.nexti.android.dragonglass.view.activity.main.ConnectionLockActivity" />

        <!--
        <receiver android:name=".listener.PhoneServiceReceiver">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.PHONE_STATE"/>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>
        -->
        <receiver android:name="com.nexti.android.dragonglass.listener.OutgoingCallReceiver" >
            <intent-filter android:priority="1" >
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.nexti.android.dragonglass.listener.IncomingCallReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>